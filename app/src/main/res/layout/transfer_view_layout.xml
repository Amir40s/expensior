<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/input_background"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/tv_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textSize="14sp"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            />

        <EditText
            android:id="@+id/ed_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_input_background"
            android:hint="Enter Amount"
            android:textSize="14sp"
            android:drawableStart="@drawable/ic_income"
            android:drawablePadding="10dp"
            android:inputType="number"
            android:drawableTint="@color/mainColor"
            android:padding="8dp"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/input_background"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/tv_fromBank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_input_background"
            android:hint="Select bank"
            android:textSize="12sp"
            android:drawableStart="@drawable/ic_category"
            android:drawablePadding="10dp"
            android:drawableTint="@color/mainColor"
            android:padding="8dp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_input_background"
            android:hint="Account: Income Expense"
            android:textSize="14sp"
            android:drawableStart="@drawable/ic_wallet"
            android:drawablePadding="10dp"
            android:drawableTint="@color/mainColor"
            android:padding="8dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/input_background"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/tv_toBank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_input_background"
            android:hint="Select bank"
            android:textSize="12sp"
            android:drawableStart="@drawable/ic_category"
            android:drawablePadding="10dp"
            android:drawableTint="@color/mainColor"
            android:padding="8dp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_input_background"
            android:hint="Account: Income Expense"
            android:textSize="14sp"
            android:drawableStart="@drawable/ic_wallet"
            android:drawablePadding="10dp"
            android:drawableTint="@color/mainColor"
            android:padding="8dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="3"
        >

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_background"
            android:padding="10dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:gravity="center|start"
            android:layout_marginRight="3dp"
            android:text="Select date"
            android:drawableEnd="@drawable/ic_date"
            android:drawableTint="@color/mainColor"
            />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_background"
            android:padding="10dp"
            android:textSize="12sp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="center|start"
            android:layout_marginStart="4dp"
            android:text="Select Time"
            app:drawableEndCompat="@drawable/ic_time"
            app:drawableTint="@color/mainColor" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/input_background"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notes (optional)"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            />

        <EditText
            android:id="@+id/tv_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_input_background"
            android:hint="Enter Notes.."
            android:textSize="12sp"
            android:drawableStart="@drawable/ic_chat"
            android:drawablePadding="10dp"
            android:drawableTint="@color/mainColor"
            android:padding="8dp"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:text="Save"
        android:textSize="14sp"
        android:layout_margin="40dp"
        />




</LinearLayout>